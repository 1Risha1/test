{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		":ignoreUnstable",
		":prImmediately",
		":semanticCommits",
		":semanticCommitTypeAll(renovatebot)",
		":updateNotScheduled",
		":automergeDisabled",
		":ignoreModulesAndTests"
	],
	"baseBranches": [
		"develop"
	],
	"packageRules": [
		{
			"groupName": "jetbrains-kotlin",
			"packagePatterns": [
				"^org.jetbrains.kotlin"
			]
		},
		{
			"groupName": "spring",
			"packagePatterns": [
				"^org.springframework:"
			]
		},
		{
			"groupName": "spring-boot",
			"packagePatterns": [
				"^org.springframework.boot:"
			]
		},
		{
			"groupName": "spring-cloud",
			"packagePatterns": [
				"^org.springframework.cloud:"
			]
		}
	]
}